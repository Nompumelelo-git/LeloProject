<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeloProject</title>
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" asp-href-include="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/LeloProject.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Navigation -->
    <div class="navbar navbar-expand-md bg-dark navbar-dark justify-content-center">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand bg-danger" asp-controller="Home" asp-action="Index">CLAIMS</a>

            <!-- Toggler/collapsible Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#MyNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse justify-content-stretch"
                 id="MyNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Students" asp-action="Index">Students</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Admin</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Admin"
                                       asp-action="Index">User Management</a>
                                    <a class="dropdown-item" asp-controller="RoleAdmin"
                                       asp-action="Index">Role Management</a>

                                </div>
                            </li>
                        }
                    }
                </ul>

                <ul class="navbar-nav ml-auto">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-link">Hello, @User.Identity.Name</li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">

                                <button class="btn btn-link nav-link" type="submit">Log Out</button>

                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Log in</a>
                        </li>
                    }

                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Claim" asp-action="Add">Add Claim</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
       
     @RenderBody()
       
    </div>

    <script asp-src-include="/lib/jquery/dist/jquery.min.js"></script>
    <script asp-src-include="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script asp-src-include="/js/site.js" asp-append-version="true"></script>
</body>

   @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Lelo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    @await RenderSectionAsync("Scripts", required: false) *@
    
</html>
